# Port number for local server
ANIWATCH_API_PORT=4000

# Allow any origin during local testing (urlnext)
ANIWATCH_API_CORS_ALLOWED_ORIGINS=*

# Rate limiting: 30 mins, max 70 requests
ANIWATCH_API_WINDOW_MS=1800000 
ANIWATCH_API_MAX_REQS=70 

# Required for Vercel deployment
ANIWATCH_API_VERCEL_DEPLOYMENT=true

# Leave hostname unset unless you want to enable rate limiting on Vercel
# ANIWATCH_API_HOSTNAME=your-vercel-domain.vercel.app

# Optional: Redis connection URL (leave blank if not using)
ANIWATCH_API_REDIS_CONN_URL=

# Cache control (safe defaults)
ANIWATCH_API_S_MAXAGE=60
ANIWATCH_API_STALE_WHILE_REVALIDATE=30
